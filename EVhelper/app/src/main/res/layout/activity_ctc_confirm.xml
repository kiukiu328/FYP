<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CTCConfirm"
    android:orientation="vertical"
    android:background="@drawable/car4">
    //actionBar
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/tool_bar_color2"
            >
            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                app:iconGravity="textStart"
                android:id="@+id/mainPageBtn"
                android:backgroundTint="@color/noColor"
                android:layout_marginLeft="10dp"></Button>
            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
               android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
                app:iconGravity="textStart"
                android:id="@+id/btn_back"
                android:backgroundTint="@color/noColor"

                ></Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CTC Examination"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="104dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    //actionBar

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Testing Date : "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/edit_ctcDate"
                android:inputType="none"
                android:textIsSelectable="true"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Testing Time : "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:id="@+id/edit_ctcTime"
                android:inputType="none"
                android:textIsSelectable="true"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctcShow2"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area : "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <Spinner
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/spr_centreArea"
                        android:spinnerMode="dropdown"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:popupBackground="@color/spr_bg_red"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="District : "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <Spinner
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/spr_centreDistrict"
                        android:spinnerMode="dropdown"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:popupBackground="@color/spr_bg_red"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Centre : "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <Spinner
                        android:layout_marginLeft="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/spr_centreName"
                        android:spinnerMode="dropdown"
                        android:lineSpacingExtra="10sp"
                        android:popupBackground="@color/spr_bg_red"

                        />
                </LinearLayout>
<!--                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    >
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:id="@+id/txt_centreInfo"
                        android:lineSpacingExtra="4sp"/>
                </LinearLayout>-->
            </LinearLayout>

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:id="@+id/scrollView"
    android:layout_marginTop="10dp"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctcShow"
                android:orientation="vertical"
                android:visibility="visible">
            //Centre Name
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centre Name : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:id="@+id/txt_centreName"
                    />
            </LinearLayout>
            //Centre Name
            //Centre Tel
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centre Tel : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:id="@+id/txt_centreTel"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>
            //Centre Tel
            //Centre Location
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centre Location : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_ctcLocation"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.26"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>
            //Centre Location
            //Working Hours
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Working Hours : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/txt_workingHours"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.26"
                    />
            </LinearLayout>
            //Working Hours
            </LinearLayout>
</ScrollView>
    </LinearLayout>
    //btn
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="100dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_createCTC"
            android:visibility="visible"
            android:background="@drawable/cust_btn_color"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Calender"
            android:id="@+id/btn_googleCalender"
            android:visibility="gone"
            android:background="@drawable/cust_btn_color"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:id="@+id/btn_modifyData"
            android:visibility="gone"
            android:background="@drawable/cust_btn_color"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>