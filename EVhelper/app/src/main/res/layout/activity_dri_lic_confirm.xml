<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder.DriLicConfirm"
    android:orientation="vertical"
    android:background="@drawable/car6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@color/spr_bg_yellow"
            >
            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/noColor"
                android:layout_marginLeft="10dp"
                app:icon="@drawable/ic_baseline_home_24"
                app:iconGravity="textStart"
                android:id="@+id/mainPageBtn"
                android:visibility="gone"></Button>
            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/noColor"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
                app:iconGravity="textStart"
                android:id="@+id/btn_back"
                ></Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driving Licence"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="52dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/ctc_info2"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driving Licence Number  "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/edit_driLicNo"
        android:inputType="none"
        android:textIsSelectable="true"
        android:focusable="false"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/spr_bg_yellow"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name  "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/edit_driName"
            android:textStyle="bold"
            android:textColor="@color/spr_bg_yellow"
            android:padding="5dp"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driving Licence Valid To  "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/edit_driLicDate"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"
            android:textStyle="bold"
            android:textColor="@color/spr_bg_yellow"
            android:padding="5dp"
            android:background="@drawable/click_effect"
            />
    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync Google Calender"
            android:id="@+id/btn_googleCalender"
            android:background="@drawable/cust_btn_color"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:id="@+id/btn_modifyData"
            android:background="@drawable/cust_btn_color"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
